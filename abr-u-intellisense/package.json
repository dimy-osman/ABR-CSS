{
	"name": "abr-u-intellisense",
	"displayName": "ABR-U CSS IntelliSense",
	"description": "Intelligent autocomplete and hover documentation for ABR-U CSS utility classes. Select multiple classes to preview combined CSS!",
	"version": "1.6.4",
	"publisher": "dimy-osman",
	"license": "MIT",
	"icon": "icon.png",
	"repository": {
		"type": "git",
		"url": "https://github.com/dimy-osman/ABR-CSS.git"
	},
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Programming Languages"
	],
	"keywords": [
		"css",
		"abr-u",
		"utility-css",
		"autocomplete",
		"intellisense",
		"tailwind-alternative"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "abr-u-intellisense.test",
				"title": "ABR-U: Test Extension"
			}
		],
		"configuration": {
			"title": "ABR-U IntelliSense",
			"properties": {
				"abr-u-intellisense.hoverMode": {
					"type": "string",
					"default": "selectionOnly",
					"enum": [
						"always",
						"selectionOnly"
					],
					"enumDescriptions": [
						"Show hover tooltips when hovering over any ABR-U class",
						"Show hover tooltips only when text is selected (less disruptive)"
					],
					"description": "Controls when ABR-U hover tooltips appear"
				}
			}
		}
	},
	"scripts": {
		"compile": "tsc -p .",
		"watch": "tsc -watch -p .",
		"generate": "node scripts/generateClassData.js",
		"build": "npm run generate && npm run compile"
	},
	"devDependencies": {
		"@types/node": "^20.5.0",
		"@types/vscode": "^1.80.0",
		"typescript": "^5.4.0"
	}
}
